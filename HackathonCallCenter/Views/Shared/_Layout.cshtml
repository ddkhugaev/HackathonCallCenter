<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VoiceAnalytics</title>
    <link rel="stylesheet" href="~/css/style.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="sidebar">
        <div class="logo">
            <div class="logo-icon">
                <i class="fas fa-wave-square"></i>
            </div>
            <div class="logo-text">VoiceAnalytics</div>
        </div>

        <div class="nav-menu">
            <div class="nav-section">Основное</div>
            <a asp-controller="Home" asp-action="Index" class="nav-item">
                <i class="fas fa-home"></i><span>Дашборд</span>
            </a>
            <a asp-controller="Home" asp-action="Calls" class="nav-item">
                <i class="fas fa-phone-alt"></i><span>Звонки</span>
            </a>
            <a asp-controller="Home" asp-action="Operators" class="nav-item">
                <i class="fas fa-user-friends"></i><span>Операторы</span>
            </a>
            <a asp-controller="Home" asp-action="Analytics" class="nav-item">
                <i class="fas fa-chart-bar"></i><span>Аналитика</span>
            </a>

            <div class="nav-section">AI-Анализ</div>
            <a asp-controller="Home" asp-action="AiAnalysis" class="nav-item">
                <i class="fas fa-robot"></i><span>Анализ эмоций</span>
            </a>
            <a asp-controller="Home" asp-action="Recommendations" class="nav-item">
                <i class="fas fa-lightbulb"></i><span>Рекомендации</span>
            </a>
            <a asp-controller="Home" asp-action="ProblemDetection" class="nav-item">
                <i class="fas fa-exclamation-triangle"></i><span>Выявление проблем</span>
            </a>
        </div>
    </div>

    <div>
        @RenderBody()
    </div>

    <script src="~/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>