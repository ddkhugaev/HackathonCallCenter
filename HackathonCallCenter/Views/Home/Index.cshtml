@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/dashboard.css">
    <link rel="stylesheet" href="~/css/charts.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
}


<div class="main-content" style="width: 1597px;">
    <div class="header">
        <div class="header-title">
            <h1>Дашборд речевой аналитики</h1>
            <p>Анализ звонков и взаимодействий с клиентами</p>
        </div>
        <div class="header-actions">
            <button class="btn btn-secondary btn-upload">
                <i class="fas fa-upload"></i>
                Загрузить звонок
            </button>
            <button class="btn btn-primary btn-new-analysis">
                <i class="fas fa-plus"></i>
                Новый анализ
            </button>
            <div class="user-info">
                <div class="user-avatar">АИ</div>
                <div>
                    <div style="font-weight: 600;">Амридин Назаров</div>
                    <div style="font-size: 0.8rem; color: var(--gray-color);">Администратор</div>
                </div>
            </div>
        </div>
    </div>

    <div class="stats-container">
        <div class="stat-card">
            <div class="stat-icon call">
                <i class="fas fa-phone-alt"></i>
            </div>
            <div class="stat-info">
                <h3>1,247</h3>
                <p>Всего звонков</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon success">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="stat-info">
                <h3>89%</h3>
                <p>Успешных сделок</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon duration">
                <i class="fas fa-clock"></i>
            </div>
            <div class="stat-info">
                <h3>4:32</h3>
                <p>Средняя длительность</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon satisfaction">
                <i class="fas fa-smile"></i>
            </div>
            <div class="stat-info">
                <h3>8.2/10</h3>
                <p>Удовлетворенность клиентов</p>
            </div>
        </div>
    </div>

    <!-- Графики -->
    <div class="charts-grid">
        <div class="chart-card">
            <div class="card-header">
                <div class="card-title">Количество звонков по дням</div>
            </div>
            <div class="chart-container">
                <canvas id="callsChart"></canvas>
            </div>
            <div class="chart-legend">
                <div class="legend-item">
                    <div class="legend-color legend-primary"></div>
                    <span>Входящие звонки</span>
                </div>
                <div class="legend-item">
                    <div class="legend-color legend-success"></div>
                    <span>Исходящие звонки</span>
                </div>
            </div>
        </div>

        <div class="chart-card">
            <div class="card-header">
                <div class="card-title">Успешность сделок по месяцам</div>
            </div>
            <div class="chart-container">
                <canvas id="successRateChart"></canvas>
            </div>
            <div class="chart-legend">
                <div class="legend-item">
                    <div class="legend-color legend-success"></div>
                    <span>Успешные сделки</span>
                </div>
                <div class="legend-item">
                    <div class="legend-color legend-danger"></div>
                    <span>Неуспешные сделки</span>
                </div>
            </div>
        </div>

        <div class="chart-card">
            <div class="card-header">
                <div class="card-title">Удовлетворенность клиентов</div>
            </div>
            <div class="chart-container">
                <canvas id="satisfactionChart"></canvas>
            </div>
            <div class="chart-legend">
                <div class="legend-item">
                    <div class="legend-color legend-success"></div>
                    <span>Высокая</span>
                </div>
                <div class="legend-item">
                    <div class="legend-color legend-warning"></div>
                    <span>Средняя</span>
                </div>
                <div class="legend-item">
                    <div class="legend-color legend-danger"></div>
                    <span>Низкая</span>
                </div>
            </div>
        </div>

        <div class="chart-card">
            <div class="card-header">
                <div class="card-title">Производительность операторов</div>
            </div>
            <div class="chart-container">
                <canvas id="operatorsChart"></canvas>
            </div>
            <div class="chart-legend">
                <div class="legend-item">
                    <div class="legend-color legend-primary"></div>
                    <span>Успешность сделок (%)</span>
                </div>
                <div class="legend-item">
                    <div class="legend-color legend-success"></div>
                    <span>Удовлетворенность клиентов</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Недавние звонки -->
    <div class="card">
        <div class="card-header">
            <div class="card-title">Недавние звонки</div>
            <div class="card-actions">
                <a href="calls.html" class="btn btn-secondary">Все звонки</a>
            </div>
        </div>

        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Номер</th>
                        <th>Тип</th>
                        <th>Длительность</th>
                        <th>Дата и время</th>
                        <th>Статус</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>+7 927 368 99 93</td>
                        <td><span class="badge badge-incoming">Входящий</span></td>
                        <td>4:18</td>
                        <td>Сегодня, 10:24</td>
                        <td><span class="badge badge-success">Успешный</span></td>
                        <td>
                            <button class="btn-icon btn-ai-analysis" title="AI анализ">
                                <i class="fas fa-robot"></i>
                            </button>
                            <button class="btn-icon" title="Просмотр">
                                <i class="fas fa-eye"></i>
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td>+963 179 88 77</td>
                        <td><span class="badge badge-outgoing">Исходящий</span></td>
                        <td>7:02</td>
                        <td>Вчера, 16:42</td>
                        <td><span class="badge badge-success">Успешный</span></td>
                        <td>
                            <button class="btn-icon btn-ai-analysis" title="AI анализ">
                                <i class="fas fa-robot"></i>
                            </button>
                            <button class="btn-icon" title="Просмотр">
                                <i class="fas fa-eye"></i>
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td>+7 910 555 43 21</td>
                        <td><span class="badge badge-incoming">Входящий</span></td>
                        <td>2:50</td>
                        <td>Вчера, 14:15</td>
                        <td><span class="badge badge-danger">Неуспешный</span></td>
                        <td>
                            <button class="btn-icon btn-ai-analysis" title="AI анализ">
                                <i class="fas fa-robot"></i>
                            </button>
                            <button class="btn-icon" title="Просмотр">
                                <i class="fas fa-eye"></i>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/charts.js"></script>
}